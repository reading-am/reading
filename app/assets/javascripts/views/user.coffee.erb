define [
  "jquery"
], ($) ->

  $ ->
    $("a.follow").click ->
      $this = $(this)
      follow = "Follow"
      disabled = "disabled"
      return false  if $this.hasClass(disabled)
      $this.addClass disabled
      $.get $this.attr("href"), (data) ->
        if data is "true"
          $span = $this.find("span")
          text = (if $span.text().indexOf(follow) is 0 then "Un" + follow.toLowerCase() else follow)
          href = $this.attr("href")
          $this.attr "href", href.replace($span.text().toLowerCase(), text.toLowerCase())
          $span.text text
        $this.removeClass disabled

      false

  <% if Rails.env == 'development' %>
    # replace images from production S3 account
    $("img").error ->
      $this = $(this)
      $this.unbind("error").attr("src", $this.attr("src").replace("development","production"))
  <% end %>
