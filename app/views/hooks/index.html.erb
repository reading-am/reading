<div id="content">
<%= render :partial => 'users/settings_header' %>
<%= render :partial => 'users/settings_subnav' if @user == current_user %>

<h5 class="hook_message">Hooks perform an action each time you post</h5>

<%= render :partial => 'hooks/form', :locals => {:hook => @new_hook} if @new_hook %>

<div id="hooks">
<table>
<% @hooks.each do |hook| %>
  <tr>
    <%= render :partial => 'hooks/hook', :locals => {:hook => hook} %>
    <% if hook.user.id == current_user.id %>
    <td><%= link_to 'Delete', hook, :class => 'admin action', :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>
</div>
</div>
