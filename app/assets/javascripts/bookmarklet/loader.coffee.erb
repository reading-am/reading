class Provider
  constructor: (p) ->
    @name = p.name
    @url_scheme = p.url_scheme
    @action = p.action
  url: (post) ->
    vals =
      url: post.page.url
      short_url: "http://#{post.short_url()}"
      wrapped_url: post.wrapped_url
      title: post.page.title
    parsed_url = @url_scheme
    for val of vals
      parsed_url = parsed_url.replace("{#{val}}", encodeURIComponent(vals[val]))
    parsed_url
  run: (post) ->
    @action @url post

