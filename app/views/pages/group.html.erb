<div id="content">
  <% if @result.length == 0 %>
    <h1>This group does not exist (yet).</h1>
  <% else %>
    <h1>#<%= params[:id] %></h1>
    <% @result.each do |comment| %>
      <div>
        <blockquote>
          <% if comment.body == "##{params[:id]}" %>
           <p> <a href="">@<%= comment.user.username %></a> shared <a href=""><%= comment.page.title %></a> to the group.</p>
          <% else %>
            <p><%= comment.body[3..-1] %><p>
            &mdash; <cite><a href="/<%= comment.user.username %>">@<%= comment.user.username %></a> on <a href="<%= comment.page.url %>"><%= comment.page.title %></a></cite>
          <% end %>
        </blockquote>
      </div>
    <% end %>
  <% end %>
</div>
