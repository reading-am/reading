$blue: #B3FEFF;
$dark_blue: #00FBFF;

.posts_group {
  margin-bottom:46px !important; // This is needed so the responsive stylesheet doesn't override it
}

.posts_group .posts {
  margin-top:10px;
}

.post .body {
  color:#333;
}
.post h3 a {
  background:none;
}
.post.referred_post a.external {
  background:#EEE;
}
.post.yep {
  color:#000;
}
.post.yep .yn:before {
  color:green;
  content:'✔';
}
h3.yep:before {
  color:green;
  content:'✔';
  font-size:19px;
}
h3.nope {
  line-height:21px;
}
h3.nope:before {
  color:red;
  content:'×';
  font-size:24px;
}
.post.nope .yn_wrap, .posts_group .nope .page {
  text-decoration:line-through;
}
.post.nope .yn_wrap {
  color:red;
}
.post.new {
  opacity:0.3;
}

.post .plusnav a {
  padding:0 5px;
}
.info {
  background:none;
  font-weight:bold;
}
  .info:hover {
    background:$blue;
    text-decoration:none;
  }
