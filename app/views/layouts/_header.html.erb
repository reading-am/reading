<div id="header">

<% in_settings = request.fullpath[0..8] == '/settings' %>
<% if signed_in? %>
<div class="row">
  <nav id="mainnav" class="span7 offset1">
  <% if current_user.username_was and current_user.email_was # hides nav for /almost_ready %>
    <%= link_to "You", "/#{current_user.username}/list", :class => ((request.path.split('/')[1] == current_user.username and !in_settings) ? 'active' : '') %>
    <span class="hide_iphone">-</span> <%= link_to "Everybody", '/everybody', :class => (params[:controller] != 'search' && params[:username] != current_user.username && !in_settings ? 'active' : '') %>
    <span class="hide_iphone">-</span> <%= link_to "Settings", "/settings/info", :class => (in_settings ? 'active' : '') %>
    <span class="hide_iphone">-</span> <%= render :partial => 'search/form' %>
  <% end %>
  </nav>
</div>
<% else %>
<%
  if @user.nil? or (signed_in? && current_user.id == @user.id)
    you = "you"
    youre = "you're"
  else
    you = @user.first_name
    youre = "#{you} is"
  end
%>
<div class="row">
  <div class="span7 offset1">
    <h3><span id="lead_in"><% if you == "you" %>Share what<% else %>What<% end %> <%= youre %> reading. </span>Not what <%= you %> like<%= 's' if @user and @user != current_user %>. Not what <%= you %> find<%= 's' if @user and @user != current_user %> interesting. Just what <%= youre %> reading.</h3>
  </div>
</div>
<div class="row">
  <div id="signup" class="span7 offset1">
    Sign up or in with
    <%= link_to provider_span(:twitter), "#", :data => {:provider => 'Twitter', :method => 'login'} %> or
    <%= link_to provider_span(:facebook), "#", :data => {:provider => 'Facebook', :method => 'login'} %>.
  </div>
</div>
<% end %>

</div>
