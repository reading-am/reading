<% if @user and @user.posts.size == 0 %>
  <%= render :partial => 'blank_slate' %>
<% else %>

<div id="content">
<h4>
<% if @domain %>
  People have been reading on <%= @domain.name %>
<% else %>
  What <%= if @user == current_user then "you've" else "#{@user.display_name} has" end %> been reading
<% end %>
</h4>

<nav id="subnav">
<a href="#" class="active">Reading List</a>
- <a href="#">Feed</a>
<% if logged_in? and @user != current_user %>
  <% follow_text = current_user.following?(@user) ? 'unfollow' : 'follow' %>
  - <a href="<%= "/#{@user.username}/#{follow_text}" %>" class="follow"><span><%= follow_text.capitalize %></span> <%= @user.first_name %></a>
<% end %>
</nav>

<table>
<% time = '' %>
<% @posts.each do |post| %>
  <tr>
    <td class="date">
    <%=
      if time != post.created_at.strftime("%m/%d")
        time = post.created_at.strftime("%m/%d")
      end
    %>
    </td>
    <td><%= link_to post.page.title, post.page.url, :class => 'external', 'data-base58_id' => Base58.encode(post.id) %><% if post.referrer_post and post.user != post.referrer_post.user %> because of <%= link_to post.referrer_post.user.display_name, "/#{post.referrer_post.user.username}" %><% end %></td>
    <% if logged_in? and post.user.id == current_user.id %>
      <%# <td><%= link_to 'Edit', edit_post_path(post), :class => 'admin action' </td>%>
      <td><%= link_to 'Delete', post, :class => 'admin action', :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

</div>

<div class="bookmarklet">
  <span>Drag me to your bookmarks bar</span>
  <%= link_to 'âœŒ Reading', bookmarklet_url(current_user) if logged_in? and current_user == @user %>
</div>

<% end %>
