<%= render :partial => 'users/card', :locals => {:user => @user} %>

<table>
<% if @users.empty? %>
  <tr><td>Nobody's here yet.</td></tr>
<% else %>
<% @users.each do |user| %>
  <tr>
    <td><%= render :partial => 'users/user', :locals => { :user => user } %></td>
  </tr>
<% end %>
<% end %>
</table>
