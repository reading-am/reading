<OpenSearchDescription xmlns="http://www.opensearch.org/Specifications/OpenSearch/1.1">
    <ShortName>Reading</ShortName>
    <LongName>Reading.am Search</LongName>
    <Description>Find stuff on Reading</Description>
    <Query role="example" searchTerms="Super good stuff"/>
    <InputEncoding>UTF-8</InputEncoding>
    <OutputEncoding>UTF-8</OutputEncoding>
    <AdultContent>false</AdultContent>
    <Language>en-us</Language>
    <SyndicationRight>open</SyndicationRight>
    <Developer>Reading.am</Developer>
    <Tags>links images video articles</Tags>
    <Image height="16" width="16" type="image/vnd.microsoft.icon">https://reading.am/favicon.ico</Image>
    <Url type="text/html" template="https://reading.am/search">
      <Param name="q" value="{searchTerms}"/>
    </Url>
</OpenSearchDescription>
