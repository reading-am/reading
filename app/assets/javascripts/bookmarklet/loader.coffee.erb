# Classes

class Post
  constructor: (p) ->
    @id = p.id
    @yn = p.yn if p.yn?
    @wrapped_url = p.wrapped_url
    @page = p.page if p.page?
    @updated_at = new Date
    @loading = false
  short_url: ->
    "#{SHORT_DOMAIN}/p/#{base58.encode(@id)}"
  save: (success) ->
    @loading = new Date
    data =
      post: # the id is passed in the url
        yn: @yn
    data.token = token if token
    $.ajax
      url: "//#{DOMAIN}/posts/#{@id}/update.json"
      dataType: "jsonp"
      data: data
      success: (data, textStatus, jqXHR) =>
        @loading = false
        if data.meta.status isnt 400 and data.meta.status isnt 403
          @updated_at = new Date
          success data.response if success
  touch: (success) ->
    @save success

Post::find_or_create = (data, success) ->
  # validations
  return alert errors.general if !data.url or data.url is "about:blank"

  data.token = token if token
  # don't send the null title or else it'll get posted
  delete data.title if data.title is null
  $.ajax
    url: "//#{DOMAIN}/posts/create.json"
    dataType: "jsonp"
    data: data
    success: (data, textStatus, jqXHR) ->
      switch data.meta.status
        when 400
          alert errors.general
        when 403
          $("#r_am").remove() # need to encapsulate this into the menu itself
          alert errors.forbidden
        else
          if success
            data.response.post = new Post data.response.post
            success data.response

