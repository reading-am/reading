<div class="row">
  <div class="span7 offset1">

    <%= twitter_bootstrap_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <%= f.password_field :password, false, :placeholder => 'New Password', :class => 'input-xlarge' %>

      <%= f.password_field :password_confirmation, false, :placeholder => 'New Password Confirmation', :class => 'input-xlarge' %>

      <%= f.submit "Change my password", :class => 'btn btn-success' %>
    <% end %>

  </div>
</div>
