<%
  has_avatar = user != current_user or (user == current_user and !user.avatar.size.nil?)
  avatar_url = has_avatar ? user.avatar.url : "/settings/info"
  avatar_target = has_avatar ? "_blank" : nil
%>
<div id="header_card" class="row r_user r_size_large">
  <%= link_to avatar_url, :id => "avatar", :class => "span1", :target => avatar_target do %>
    <%= image_tag user.avatar.url :medium %>
  <% end %>
  <div class="span7">
    <h1><%= user.display_name %></h1>
  </div>
  <nav class="span7">
    <a href="/<%= user.username %>/following"<% if params[:type] == 'following' %> class="active"<% end %>>
      <span id="following_count"><%= user.following.size %></span> Following
    </a>
    <a href="/<%= user.username %>/followers"<% if params[:type] == 'followers' %> class="active"<% end %>>
      <span id="followers_count"><%= user.followers.size %></span> Followers
    </a>
    <% if signed_in? %>
      <% if user == current_user %>
        - <a href="/users/recommended" class="button">Find People<div class="new_badge">new</div></a>
      <% else %>
        <% follow_text = current_user.following?(user) ? 'unfollow' : 'follow' %>
        - <a rel="tooltip" data-title="Add what <%= user.first_name %> reads to your following feed" href="<%= "/#{user.username}/#{follow_text}" %>" class="button follow"><span><%= follow_text.capitalize %></span> <%= user.first_name %></a>
      <% end %>
    <% end %>
  </nav>
  <% unless user.location.blank? and user.link.blank? %>
    <div id="user_places" class="span7 offset1">
      <%= user.location unless user.location.blank? %> <%= "-" unless user.location.blank? or user.link.blank? %> <%= link_to user.link, user.link, :target => '_blank' unless user.link.blank? %>
    </div>
  <% end %>
  <div id="user_bio" class="r_bio span7 offset1">
  <% if !user.bio.nil? %>
      <%= user.bio %>
  <% elsif user == current_user %>
    <%= link_to "Click here to add a bio.", "/settings/info" %>
  <% end %>
  </div>
</div>
